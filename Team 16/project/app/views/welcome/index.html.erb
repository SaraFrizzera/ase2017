<!doctype HTML>
<html>

<head>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <script src="https://use.fontawesome.com/6ca3ee8528.js"></script>

</head>

<body>
    <!-- VUE.JS TEST
    <div id="app">
        <p>{{ message }}</p>
        <p>{{ reverseMessage }}</p>
        <input type="text" v-model="message">
    </div> -->
    <div id="app">
        <div class="row">
            <div class="col col-3">
                <h3>Logged in as {{ username }}</h3>
            </div>
            <div class="col col-9">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="first-column"></th>
                            <th>GIORNO1</th>
                            <th>GIORNO2</th>
                            <th>GIORNO3</th>
                            <th>GIORNO4</th>
                            <th>GIORNO5</th>
                            <th>GIORNO6</th>
                            <th>GIORNO7</th>
                        </tr>
                    </thead>
                    <tbody id="table-body">
                        <% (1..25).each do |hour|%>
                            <tr class="<%= "non-visible" if hour==25 %>">
                                <td class="first-column-wrapper">
                                    <div class="first-column">
                                        <%= hour if hour<25 %>
                                    </div>
                                </td>
                                <% (1..7).each do |day|%>
                                    <td>
                                        <div class="event-wrapper" id="<%= hour-1  %>-<%= day  %>"></div>
                                    </td>
                                <% end %>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        <div id="overlay">
            <div class="row">
                <div class="col col-3">
                    <div class="event-info-wrapper">
                        <div class="event-info">
                            <h4>Add Event as {{ username }}</h4>
                            <form>
                                <div class="form-group">
                                  <label for="desc">Stuff done</label>
                                  <input type="text" class="form-control" id="desc" aria-describedby="desc" placeholder="Stuff done" v-model="lastEventDesc">
                                  <small id="descHelp" class="form-text text-muted">Hey now, you're a rock star, get the show on, get paid!</small>
                                </div>
                                
                                <div class="form-group">
                                  <label for="start-time-event-creation">Start time</label>
                                  <input type="text" class="form-control" id="start-time-event-creation" aria-describedby="start-time-event-creation" v-model="lastContainerClickedStart" disabled>
                                </div>
                                
                                <div class="form-group">
                                  <label for="end-time-event-creation">End time</label>
                                  <input type="text" class="form-control" id="end-time-event-creation" aria-describedby="end-time-event-creation" v-model="lastContainerClickedEnd">
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                              </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</body>

</html>